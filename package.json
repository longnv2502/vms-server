{
  "name": "vms-server",
  "version": "0.0.0",
  "private": true,
  "description": "The applicaion server for VMS",
  "license": "UNLICENSED",
  "scripts": {
    "app:start": "./mvnw",
    "app:up": "docker compose -f app.yml up --wait",
    "backend:build-cache": "./mvnw dependency:go-offline",
    "backend:debug": "./mvnw -Dspring-boot.run.jvmArguments=\"-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:8000\"",
    "backend:doc:test": "./mvnw -ntp javadoc:javadoc --batch-mode",
    "backend:info": "./mvnw -ntp enforcer:display-info --batch-mode",
    "backend:nohttp:test": "./mvnw -ntp checkstyle:check --batch-mode",
    "backend:start": "./mvnw",
    "docker:db:down": "docker compose -f .docker/postgres.yml down -v",
    "docker:db:up": "docker compose -f .docker/postgres.yml up --wait",
    "docker:keycloak:down": "docker compose -f .docker/keycloak.yml down -v",
    "docker:keycloak:up": "docker compose -f .docker/keycloak.yml up --wait",
    "docker:redis:down": "docker compose -f .docker/redis.yml down -v",
    "docker:redis:up": "docker compose -f .docker/redis.yml up --wait",
    "docker:services:down": "docker compose -f .docker/services.yml down -v",
    "docker:services:up": "docker compose -f .docker/services.yml up --wait",
    "java:jar": "./mvnw -ntp verify -DskipTests --batch-mode",
    "java:jar:dev": "npm run java:jar -- -Pdev,webapp",
    "java:jar:prod": "npm run java:jar -- -Pprod",
    "prepare": "husky install",
    "prettier:check": "prettier --check \"{,src/**/,.blueprint/**/}*.{md,json,yml,html,java}\"",
    "prettier:format": "prettier --write \"{,src/**/,.blueprint/**/}*.{md,json,yml,html,java}\""
  },
  "config": {
    "backend_port": 8080,
    "default_environment": "prod",
    "packaging": "jar"
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-plugin-java": "2.2.0",
    "prettier-plugin-packagejson": "2.4.5"
  },
  "engines": {
    "node": ">=18.16.1"
  },
  "cacheDirectories": [
    "node_modules"
  ]
}
